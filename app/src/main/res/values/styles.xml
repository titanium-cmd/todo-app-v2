<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorView</item>
        <item name="colorPrimaryDark">@color/colorView</item>
        <item name="colorAccent">@color/colorView</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/abeezee</item>
        <item name="android:textColorHint">@color/colorView</item>
    </style>

    <style name="TextInputLayout.HintText" parent="TextAppearance.AppCompat">
        <item name="android:colorAccent">@color/colorView</item>
        <item name="android:textColorHint">@color/colorView</item>
        <item name="android:textColorLink">@color/colorView</item>
        <item name="android:textColorHighlight">@color/colorView</item>
        <item name="android:editTextStyle">@color/colorView</item>
    </style>
</resources>
